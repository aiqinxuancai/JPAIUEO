<UserControl x:Class="JPAIUEO.View.WindowFullYinViewCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JPAIUEO.View"
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="110">
    <Border BorderThickness="1" BorderBrush="#33000000">
        <Grid>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding Roma}" />
                <Border BorderBrush="#33000000" BorderThickness="0,1,0,0">
                    <Grid Height="34">
                        <TextBlock Text="{Binding Ping}"  FontSize="20" TextAlignment="Center" Padding="0,3,0,0" HorizontalAlignment="Left" Width="53"/>
                        <TextBlock Text="{Binding Pian}"  FontSize="20" TextAlignment="Center" Padding="0,3,0,0" HorizontalAlignment="Right" Width="53"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
